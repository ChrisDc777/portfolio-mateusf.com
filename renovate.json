{
  "extends": ["config:base"],
  "automerge": true,
  "commitBodyTable": true,
  "branchPrefix": "deps/",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["major", "minor"],
      "stabilityDays": 3
    },
    {
      "matchDepTypes": ["major"],
      "automerge": false,
      "addLabels": ["d:major"]
    },
    {
      "matchDepTypes": ["minor"],
      "addLabels": ["d:minor"]
    },
    {
      "matchDepTypes": ["patch"],
      "addLabels": ["d:patch"]
    },
    {
      "matchDepTypes": ["pin"],
      "addLabels": ["d:pin"]
    },
    {
      "matchDepTypes": ["rollback"],
      "addLabels": ["d:rollback"]
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "addLabels": ["optional"]
    },
    {
      "matchPackagePatterns": ["eslint"],
      "addLabels": ["lint"]
    },
    {
      "matchPackagePatterns": ["styled-components"],
      "addLabels": ["styled-components"]
    },
    {
      "matchPackagePatterns": ["typescript"],
      "addLabels": ["typescript"]
    }
  ]
}
