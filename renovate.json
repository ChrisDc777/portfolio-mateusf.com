{
  "extends": ["config:base"],
  "automerge": true,
  "commitBodyTable": true,
  "branchPrefix": "deps/",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "stabilityDays": 3,
      "addLabels": ["d:major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "stabilityDays": 3,
      "addLabels": ["d:minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "addLabels": ["d:patch"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "addLabels": ["d:pin"]
    },
    {
      "matchUpdateTypes": ["rollback"],
      "addLabels": ["d:rollback"]
    },
    {
      "matchPackagePatterns": ["eslint"],
      "addLabels": ["lint"]
    },
    {
      "matchPackagePatterns": ["styled-components"],
      "addLabels": ["styled-components"]
    },
    {
      "matchPackagePatterns": ["typescript"],
      "addLabels": ["typescript"]
    },
    {
      "matchPackagePatterns": ["types"],
      "addLabels": ["typescript"]
    },
    {
      "matchPackagePatterns": ["react"],
      "addLabels": ["react"]
    },
    {
      "matchPackagePatterns": ["highlight.js"],
      "addLabels": ["highlight.js"]
    },
    {
      "matchPackagePatterns": ["next"],
      "addLabels": ["next.js"]
    }
  ]
}
